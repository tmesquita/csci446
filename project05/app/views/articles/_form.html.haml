%br/
%br/
= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
          %br/
  .field
    = f.label :title
    = f.text_field :title
  %br/
  .field
    = f.label :author_id
    = collection_select(:article, :author_id, @authors, :id, :name, {:prompt => 'Select Author'})
  %br/
  .field
    = f.label :body
    = f.text_area :body, :size => '45x20'
  .actions
    - if @article.new_record?
      = f.submit 'Create!'
    - else
      = f.submit 'Save Changes'
