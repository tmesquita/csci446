!!!
%html
  %head
    %title Gamez
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  .nav_bar
    - if current_user
      Logged in as
      = link_to current_user.username, :member_me
      , 
      = current_user.get_role
       
      = link_to "Logout", :logout
      %h1
        = link_to "Games", member_root_url
    - else
      = link_to "Login", :login
      = link_to "Register", :register
      %h1
        = link_to "Gamez", root_url
  %body
    -if current_user and current_user.is_admin?
      = render :partial => 'layouts/admin_nav_bar'
      %br
    = yield
