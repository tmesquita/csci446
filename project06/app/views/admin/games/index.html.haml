%p#notice= notice
%p#alert= alert
%p
  = will_paginate @games
%table
  %tr
    %th.title Title
    %th.rating Rating
    %th.date Date Added
  - @games.each do |game|
    %tr
      %td.title= game_title(game)
      %td.rating= game_rating(game)
      %td.date= game_date(game)
%br/
= link_to 'New Game', new_admin_game_path
